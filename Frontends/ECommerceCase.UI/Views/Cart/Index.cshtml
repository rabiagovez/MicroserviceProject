@model IEnumerable<ECommerceCase.UI.Models.CartItemViewModel>

<h2>Cart</h2>
<table>
    <thead>
    <tr>
        <th>Name</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Total</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Price</td>
            <td>@item.Quantity</td>
            <td>@(item.Price * item.Quantity)</td>
        </tr>
    }
    </tbody>
</table>
<p>Total Price: @ViewBag.TotalPrice</p>
<a asp-controller="Order" asp-action="Checkout">Checkout</a>