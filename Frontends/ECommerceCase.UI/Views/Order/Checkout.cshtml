@model ECommerceCase.UI.Models.CreateOrderViewModel

<h2>Checkout</h2>
<form method="post" asp-action="PlaceOrder">
    <label>Buyer ID:</label>
    <input type="text" name="BuyerId" value="@Model.BuyerId" /><br />
    <label>Email:</label>
    <input type="email" name="Email" value="@Model.Email" /><br />
    <label>Phone Number:</label>
    <input type="text" name="PhoneNumber" value="@Model.PhoneNumber" /><br />

    <h3>Order Summary</h3>
    <table>
        <thead>
        <tr>
            <th>Product Name</th>
            <th>Quantity</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>@item.ProductName</td>
                <td>@item.Quantity</td>
            </tr>
        }
        </tbody>
    </table>
    <button type="submit">Place Order</button>
</form>l>