@model List<ECommerceCase.UI.Models.OrderViewModel>
@{
    ViewData["Title"] = "Sipariş Yönetimi";
}

<div class="min-h-screen bg-gray-50 py-8">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Header Section -->
        <div class="mb-8">
            <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between">
                <div class="mb-4 sm:mb-0">
                    <!-- Breadcrumb -->
                    <nav class="flex mb-3" aria-label="Breadcrumb">
                        <ol class="flex items-center space-x-2 text-sm text-gray-500">
                            <li><a href="#" class="hover:text-gray-700">Ana Sayfa</a></li>
                            <li><i class="fas fa-chevron-right text-xs"></i></li>
                            <li class="text-gray-900 font-medium">Sipariş Yönetimi</li>
                        </ol>
                    </nav>

                    <div class="flex items-center space-x-3">
                        <div class="flex-shrink-0">
                            <div class="w-12 h-12 bg-indigo-100 rounded-xl flex items-center justify-center">
                                <i class="fas fa-shopping-cart text-indigo-600 text-xl"></i>
                            </div>
                        </div>
                        <div>
                            <h1 class="text-3xl font-bold text-gray-900">Sipariş Yönetimi</h1>
                            <p class="text-gray-600">Siparişlerinizi görüntüleyin ve yönetin</p>
                        </div>
                    </div>
                </div>

                <!-- Action Button -->
                <div class="flex-shrink-0">
                    <a asp-action="Create"
                       class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-lg shadow-sm text-white bg-gradient-to-r from-indigo-600 to-blue-600 hover:from-indigo-700 hover:to-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition duration-200 ease-in-out transform hover:scale-105">
                        <i class="fas fa-plus mr-2"></i>
                        Yeni Sipariş Oluştur
                    </a>
                </div>
            </div>
        </div>

        <!-- Stats Cards -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
            <div class="bg-white rounded-xl shadow-lg border border-gray-200 p-6">
                <div class="flex items-center">
                    <div class="flex-shrink-0">
                        <div class="w-10 h-10 bg-green-100 rounded-lg flex items-center justify-center">
                            <i class="fas fa-shopping-bag text-green-600"></i>
                        </div>
                    </div>
                    <div class="ml-4">
                        <dt class="text-sm font-medium text-gray-500">Toplam Sipariş</dt>
                        <dd class="text-2xl font-bold text-gray-900">@Model.Count</dd>
                    </div>
                </div>
            </div>

            <div class="bg-white rounded-xl shadow-lg border border-gray-200 p-6">
                <div class="flex items-center">
                    <div class="flex-shrink-0">
                        <div class="w-10 h-10 bg-blue-100 rounded-lg flex items-center justify-center">
                            <i class="fas fa-box text-blue-600"></i>
                        </div>
                    </div>
                    <div class="ml-4">
                        <dt class="text-sm font-medium text-gray-500">Toplam Ürün</dt>
                        <dd class="text-2xl font-bold text-gray-900">@Model.Sum(o => o.TotalQuantity)</dd>
                    </div>
                </div>
            </div>

            <div class="bg-white rounded-xl shadow-lg border border-gray-200 p-6">
                <div class="flex items-center">
                    <div class="flex-shrink-0">
                        <div class="w-10 h-10 bg-orange-100 rounded-lg flex items-center justify-center">
                            <i class="fas fa-users text-orange-600"></i>
                        </div>
                    </div>
                    <div class="ml-4">
                        <dt class="text-sm font-medium text-gray-500">Toplam Alıcı</dt>
                        <dd class="text-2xl font-bold text-gray-900">@Model.Select(o => o.BuyerId).Distinct().Count()</dd>
                    </div>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="bg-white shadow-xl rounded-xl border border-gray-200 overflow-hidden">
            <div class="px-6 py-12 text-center">
                <div class="mx-auto max-w-md">
                    <div class="w-24 h-24 bg-indigo-100 rounded-full flex items-center justify-center mx-auto mb-6">
                        <i class="fas fa-shopping-cart text-indigo-600 text-3xl"></i>
                    </div>
                    <h2 class="text-2xl font-bold text-gray-900 mb-4">Yeni Sipariş Oluştur</h2>
                    <p class="text-gray-600 mb-8">
                        Yeni bir sipariş oluşturmak için aşağıdaki butona tıklayın. Sipariş oluşturma formunda alıcı bilgilerini ve sipariş detaylarını girebilirsiniz.
                    </p>
                    <a asp-action="Create" 
                       class="inline-flex items-center px-8 py-4 border border-transparent text-lg font-medium rounded-lg shadow-sm text-white bg-gradient-to-r from-indigo-600 to-blue-600 hover:from-indigo-700 hover:to-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition duration-200 ease-in-out transform hover:scale-105">
                        <i class="fas fa-plus mr-3"></i>
                        Yeni Sipariş Oluştur
                    </a>
                </div>
            </div>
        </div>

        <!-- Additional Information Card -->
        <div class="mt-6 bg-blue-50 border border-blue-200 rounded-lg p-4">
            <div class="flex items-start space-x-3">
                <div class="flex-shrink-0">
                    <i class="fas fa-lightbulb text-blue-500 mt-0.5"></i>
                </div>
                <div>
                    <h3 class="text-sm font-medium text-blue-800">Faydalı İpuçları</h3>
                    <div class="mt-2 text-sm text-blue-700">
                        <ul class="list-disc list-inside space-y-1">
                            <li>Sipariş oluştururken alıcı bilgilerini doğru girin</li>
                            <li>Ürün miktarını stok durumuna göre belirleyin</li>
                            <li>Birden fazla ürün ekleyebilirsiniz</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>