@model List<OrderFrontend.Models.OrderDetailsViewModel>

@{
    ViewData["Title"] = "Siparişler";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center my-4">
        <h2>Siparişler</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Yeni Sipariş
        </a>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="row">
            @foreach (var order in Model)
            {
                <div class="col-md-6 mb-4">
                    <div class="card shadow-sm h-100">
                        <div class="card-header bg-light d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">Sipariş #@order.OrderId.ToString().Substring(0, 8)</h5>
                            <span class="badge bg-primary">@order.OrderDate.ToString("dd.MM.yyyy")</span>
                        </div>
                        <div class="card-body">
                            <div class="mb-3">
                                <strong>Alıcı:</strong> @order.BuyerId
                            </div>
                            <div class="mb-3">
                                <strong>E-posta:</strong> @order.Email
                            </div>
                            <div class="mb-3">
                                <strong>Telefon:</strong> @order.PhoneNumber
                            </div>
                            <div class="mb-3">
                                <strong>Ürün Sayısı:</strong> @(order.Items?.Count ?? 0)
                            </div>
                        </div>
                        <div class="card-footer bg-white">
                            <a asp-action="Details" asp-route-id="@order.OrderId" class="btn btn-outline-primary w-100">
                                <i class="bi bi-eye"></i> Detayları Görüntüle
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info text-center p-5 shadow-sm">
            <i class="bi bi-info-circle display-6 mb-3"></i>
            <h5>Henüz sipariş bulunmuyor</h5>
            <p class="mb-4">Yeni bir sipariş oluşturmak için "Yeni Sipariş" butonunu kullanabilirsiniz.</p>
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Yeni Sipariş Oluştur
            </a>
        </div>
    }
</div>